<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="NewApi"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/ll_login"
        android:scrollbars="none"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_login_user"
                android:textColor="@color/monsoon"
                android:text="无若叶已登录"
                android:gravity="center"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_login_name"
                android:textAlignment="center"
                android:layout_width="250dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_login_name"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="用户名"
                    android:textSize="15sp"
                    android:textColor="@color/cape_cod"
                    android:textColorHint="@color/mountain_mist"
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_login_pass"
                android:textAlignment="center"
                android:layout_width="250dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_login_pass"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="密码"
                    android:textSize="15sp"
                    android:textColor="@color/cape_cod"
                    android:textColorHint="@color/mountain_mist"
                    android:inputType="numberPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btn_login_login"
                android:text="登录"
                android:textColor="@color/monsoon"
                android:background="@drawable/btn_border"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="40dp"/>

            <Button
                android:id="@+id/btn_login_out"
                android:text="注销"
                android:textColor="@color/monsoon"
                android:background="@drawable/btn_border"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/tv_login_worn"
                android:gravity="center"
                android:textColor="@color/carnation"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>
</RelativeLayout>