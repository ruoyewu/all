<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="NewApi"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:background="@color/romance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_all_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="- 阅读 -"
        android:textColor="@color/monsoon"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_all_title"
        android:text="幻觉"
        android:textSize="18sp"
        android:textColor="@color/cape_cod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_all_author"
        android:text="- 刘文"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/monsoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_all_img"
        android:layout_width="match_parent"
        android:layout_height='200dp'
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_all_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:lineSpacingExtra="10dp"
        android:text="人生若只如初见"
        android:textColor="@color/monsoon"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_all_date"
        android:text="2017-7-12"
        android:textSize="12sp"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:textColor="@color/monsoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>