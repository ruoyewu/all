<?xml version="1.0" encoding="utf-8"?>
<com.wuruoye.all2.base.widget.SlideRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_setting"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/romance"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <android.support.design.widget.CollapsingToolbarLayout
                app:titleEnabled="false"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                android:minHeight="?attr/actionBarSize"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:padding="16dp"
                        android:text="设置"
                        android:textSize="20sp"
                        android:gravity="center_vertical"
                        android:textColor="@color/monsoon"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp" />

                    <android.support.design.widget.TabLayout
                        android:id="@+id/tl_setting"
                        android:layout_gravity="bottom"
                        app:tabTextColor="@color/mountain_mist"
                        app:tabSelectedTextColor="@color/monsoon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nsv_setting"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_setting"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>
</com.wuruoye.all2.base.widget.SlideRelativeLayout>